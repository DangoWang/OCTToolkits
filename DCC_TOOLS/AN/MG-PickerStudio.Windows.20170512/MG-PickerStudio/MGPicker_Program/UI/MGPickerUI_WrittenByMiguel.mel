proc string [] mgp_filterSelectedObjsToSelectedRigs()
{
    string $sel[] = `ls -sl -long -dagObjects`;
    if(!size($sel))
    {
        return {};
    }
    string $result[];
    clear $result;
    string $temp[];
    for($s in $sel)
    {
        clear $temp;
        tokenize $s "|" $temp;
        $result [size($result)] = $temp[0];
    }
    $result = `stringArrayRemoveDuplicates $result`;
    return $result;
}
