        return 0;
    }
    global int $MGPKR_OStype;
  global string $MGPicker_3DModelPanel;
  string $cam = `modelPanel -q -cam $MGPicker_3DModelPanel`;
    global string $MGPicker_3DModelPanelImagePlane;
    MGP_clear3DModelEditorImagePlane; 
    string $oldSel[] = `ls -sl`;
    
