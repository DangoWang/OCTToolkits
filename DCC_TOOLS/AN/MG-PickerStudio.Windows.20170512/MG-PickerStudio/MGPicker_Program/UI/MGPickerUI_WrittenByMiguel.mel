    //rename $ips[0] $MGPicker_3DModelPanelImagePlane;
    //string $shapes[] = `listRelatives -s $MGPicker_3DModelPanelImagePlane`;
    setAttr ($ips[0] + ".imageName")   -type "string" $image;
    setAttr ($ips[0] + ".displayOnlyIfCurrent")  1;
    
