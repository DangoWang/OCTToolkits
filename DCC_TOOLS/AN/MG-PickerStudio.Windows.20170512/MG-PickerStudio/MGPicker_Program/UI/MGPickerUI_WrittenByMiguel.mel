global proc MGP_ScriptEditorFeedback(string $msg, int $type)
//$type 0: normal msg
//$type 1: warning 
//$type 2: error
{
    global string $MGPicker_AppName;
    $msg = ("["+$MGPicker_AppName+"] "+$msg);
    if(!`endsWith $msg "\n"`)
    {
        $msg += "\n";
    }
    if(!$type)
    {
        print $msg ;
    }
    else if($type == 1)
    {
        warning $msg;
    }
    else 
    {
        error $msg;
    }
}

